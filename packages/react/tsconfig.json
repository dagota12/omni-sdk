{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "jsx": "react"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
